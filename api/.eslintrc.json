{
  "env": {
    "commonjs": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "overrides": [
    {
      "env": {
        "node": true,
        "jest": true
      },
      "files": ["**/*.test.js", "**/*.test.jsx"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": ["react"],
  "rules": {
    "no-underscore-dangle": "off",
    "implicit-arrow-linebreak": "off",
    "operator-linebreak": "off",
    "indent": "off",
    "function-paren-newline": "off",
    "linebreak-style": "off",
    "camelcase": "off",
    "no-await-in-loop": "off",
    "object-curly-newline": "off",
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ]
  }
}
